<icecast>
    <location>StreamDock</location>
    <admin>admin@localhost</admin>

    <limits>
        <clients>100</clients>
        <sources>20</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>streamdock_source</source-password>
        <relay-password>streamdock_relay</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>streamdock_admin</admin-password>
    </authentication>

    <hostname>0.0.0.0</hostname>

    <listen-socket>
        <port>8100</port>
        <bind-address>0.0.0.0</bind-address>
    </listen-socket>

    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*" />
    </http-headers>

    <fileserve>1</fileserve>

    <paths>
        <basedir>/usr/share/icecast</basedir>
        <logdir>/var/log/icecast</logdir>
        <webroot>/usr/share/icecast/web</webroot>
        <adminroot>/usr/share/icecast/admin</adminroot>
    </paths>

    <logging>
        <accesslog>-</accesslog>
        <errorlog>-</errorlog>
        <loglevel>3</loglevel>
    </logging>

    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>node</user>
            <group>node</group>
        </changeowner>
    </security>

    <!-- Station Mounts (Auto-Generated) -->
    <mount>
        <mount-name>/station-one</mount-name>
        <fallback-mount>/station-one-fallback</fallback-mount>
        <fallback-override>1</fallback-override>
    </mount>
    <mount>
        <mount-name>/station-one-fallback</mount-name>
        <hidden>1</hidden>
    </mount>

    <mount>
        <mount-name>/tesst</mount-name>
        <fallback-mount>/tesst-fallback</fallback-mount>
        <fallback-override>1</fallback-override>
    </mount>
    <mount>
        <mount-name>/tesst-fallback</mount-name>
        <hidden>1</hidden>
    </mount>

    <mount>
        <mount-name>/test</mount-name>
        <fallback-mount>/test-fallback</fallback-mount>
        <fallback-override>1</fallback-override>
    </mount>
    <mount>
        <mount-name>/test-fallback</mount-name>
        <hidden>1</hidden>
    </mount>

</icecast>
